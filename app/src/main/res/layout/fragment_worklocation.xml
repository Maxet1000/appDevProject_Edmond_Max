<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/getCurrentLocationWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Current Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerWorkNotification" />

    <EditText
        android:id="@+id/editBuildingNumberWork"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="1"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streetNameAndNumberWork" />

    <EditText
        android:id="@+id/editPostalCodeWork"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="75007"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CityNameWork" />

    <TextView
        android:id="@+id/ConfigureWorkLocationHead"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Configure Work Location"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CountryNameWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfigureWorkLocationHead" />

    <EditText
        android:id="@+id/editCountryNameWork"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="France"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CountryNameWork" />

    <TextView
        android:id="@+id/CityNameWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="City and Postal Code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCountryNameWork" />

    <EditText
        android:id="@+id/editCityNameWork"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="Paris"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editPostalCodeWork"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CityNameWork" />

    <TextView
        android:id="@+id/streetNameAndNumberWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Street Name and Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCityNameWork" />

    <EditText
        android:id="@+id/editStreetNameWork"
        android:layout_width="269dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="Avenue Anatole"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editBuildingNumberWork"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streetNameAndNumberWork" />

    <TextView
        android:id="@+id/WorkNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Notify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editStreetNameWork" />

    <Spinner
        android:id="@+id/spinnerWorkNotification"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WorkNotification" />

    <Button
        android:id="@+id/ConfirmWorkLocationButton"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>